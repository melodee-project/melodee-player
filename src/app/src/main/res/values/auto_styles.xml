<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Android Auto Specific Styles -->
    
    <!-- Dark theme optimized for car displays -->
    <style name="MelodeeAutoTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/auto_primary</item>
        <item name="colorPrimaryDark">@color/auto_primary_dark</item>
        <item name="colorAccent">@color/auto_accent</item>
        <item name="android:textColorPrimary">@color/auto_text_primary</item>
        <item name="android:textColorSecondary">@color/auto_text_secondary</item>
        <item name="android:colorBackground">@color/auto_background</item>
    </style>
    
    <!-- High contrast colors for Android Auto -->
    <color name="auto_primary">#2196F3</color>
    <color name="auto_primary_dark">#1976D2</color>
    <color name="auto_accent">#03DAC6</color>
    <color name="auto_text_primary">#FFFFFF</color>
    <color name="auto_text_secondary">#B3FFFFFF</color>
    <color name="auto_background">#121212</color>
    <color name="auto_surface">#1E1E1E</color>
</resources>
